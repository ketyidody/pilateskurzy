{% extends "base.html.twig" %}

{% block content %}
    <!-- Hero section -->
    <div class="section fp-auto-height" id="hero-section">
        <div class="hero-slider owl-carousel">
            <div class="section about-section about-one set-bg" data-setbg="{{ asset('img/slider/yoga-7.jpg') }}">
                <div class="container text-white no-left-margin">
                    <h1>{{ content.title }}</h1>
{#                    <h2>{{ content.subtitle }}</h2>#}
                    <div id="about-more" class="site-btn margin-top-30"><span>Čitať viac</span></div>
                </div>
            </div>
        </div>
        <div class="slide-num-holder" id="snh-1"></div>
        {{ include('pages/partial/contact-link.html.twig') }}
    </div>
    <!-- Hero section end -->

    <!-- About one Section -->
    <div id="content" class="section about-section about-one section-container">
        <div class="lecturer-content-warp text-white">
            {% if content.lecturer_1_image.url is defined %}
                <p class="lecturer-image-container">
                    <img src="{{ content.lecturer_1_image.url }}" alt="Dada" />
                </p>
            {% endif %}
            <p>
                {{ content.lecturer_1_description|raw }}
            </p>
        </div>
        <div class="lecturer-content-warp text-white">
            {% if content.lecturer_2_image.url is defined %}
                <p class="lecturer-image-container">
                    <img src="{{ content.lecturer_2_image.url }}" alt="Andrea" />
                </p>
            {% endif %}
            <p>
                {{ content.lecturer_2_description|raw }}
            </p>
        </div>
        <div class="lecturer-content-warp text-white">
            {% if content.lecturer_3_image.url is defined %}
                <p class="lecturer-image-container">
                    <img src="{{ content.lecturer_3_image.url }}" alt="Dada" />
                </p>
            {% endif %}
            <p>
                {{ content.lecturer_3_description|raw }}
            </p>
        </div>
    </div>
    <!-- About one Section end-->

{% endblock %}
