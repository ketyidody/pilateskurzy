<header class="header-section">
    {% block header %}
        <nav class="header-warp">
            <!-- logo -->
            <a href="{{ sulu_content_root_path() }}" class="site-logo">
                <div class="site-btn"><span>Pilateskurzy</span></div>
            </a>
            <div class="header-social">
{#                <a href=""><i class="fa fa-pinterest"></i></a>#}
{#                <a href=""><i class="fa fa-facebook"></i></a>#}
{#                <a href=""><i class="fa fa-twitter"></i></a>#}
{#                <a href=""><i class="fa fa-dribbble"></i></a>#}
{#                <a href=""><i class="fa fa-behance"></i></a>#}
            </div>
            <div class="nav-switch">
                <i class="fa fa-bars"></i>
            </div>
            <!-- menu -->
            <div class="navbar-collapse" id="navbarSupportedContent">
                <ul class="main-menu navbar-nav nav-items-center ml-auto mr-auto">
                    {% for item in sulu_navigation_root_tree('main') %}
                        {% if (sulu_navigation_tree(item['uuid']) is empty) %}
                            <li class="nav-item">
                                <a href="{{ sulu_content_path(item.url, item.webspaceKey) }}">
                                    {{ item.title }}
                                </a>
                            </li>
                        {% else %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="{{ item.uuid }}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{ item.title }}
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="{{ item.uuid }}">
                                    {% for subItem in sulu_navigation_tree(item['uuid']) %}
                                        <a class="dropdown-item black" href="{{ sulu_content_path(subItem.url, subItem.webspaceKey) }}">
                                            {{ subItem.title }}
                                        </a>
                                    {% endfor %}
                                </div>
                            </li>
                        {% endif %}
                    {% endfor %}
                    <li class="nav-item">
                        <a class="nav-link dropdown-toggle" href="#" id="auth_actions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {% if app.user %}
                                <img src="{{ asset('img/icons/user-icon-yellow.svg') }}" />
                            {% else %}
                                <img src="{{ asset('img/icons/user-icon-white.svg') }}" />
                            {% endif %}
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="auth_actions">
                            {% if app.user %}
                                <a class="dropdown-item black" href="{{ path('auth_profile') }}">
                                    Profil
                                </a>
                                <a class="dropdown-item black" href="{{ path('auth_logout') }}">
                                    Odhlásenie
                                </a>
                            {% else %}
                                <a class="dropdown-item black" href="{{ path('auth_login') }}">
                                    Prihlásenie
                                </a>
                                <a class="dropdown-item black" href="{{ path('auth_register') }}">
                                    Registrácia
                                </a>
                            {% endif %}
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    {% endblock %}
</header>

